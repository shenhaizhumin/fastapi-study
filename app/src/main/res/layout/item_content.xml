<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/dp_15">

    <TextView
        android:id="@+id/tv_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="月亮与六便士"
        android:textColor="@android:color/black"
        android:textSize="@dimen/sp_16" />

    <TextView
        android:id="@+id/tv_item_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_title"
        android:layout_marginTop="@dimen/dp_5"
        android:ellipsize="end"
        android:maxEms="8"
        android:maxLines="1"
        android:text="平穷的纠缠，病魔的折磨他的意识"
        android:textColor="@color/commonNormalColor"
        android:textSize="@dimen/sp_12" />

    <TextView
        android:id="@+id/tv_item_topic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@drawable/shape_topic_bg"
        android:gravity="center"
        android:text="热门"
        android:textColor="@android:color/white"
        android:textSize="@dimen/sp_12" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_desc"
        android:layout_toLeftOf="@+id/tv_item_downloads"
        app:srcCompat="@drawable/ic_download_gray_24dp" />

    <TextView
        android:id="@+id/tv_item_downloads"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/tv_item_desc"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="@dimen/dp_5"
        android:text="1234"
        android:textColor="@color/commonNormalColor" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_item_images"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_item_downloads"
        android:layout_marginTop="@dimen/dp_15" />
</RelativeLayout>